@model IEnumerable<sdop.Models.Distributor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm())
    {
    <p>
        Distributor: @Html.TextBox("Search Name") <br />
        <input type="submit" value="Filter" />
    </p>
}
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DistributorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistributorCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeanDistrTimeHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistrRangeKm)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DistributorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DistributorCapacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeanDistrTimeHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DistrRangeKm)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DistributorId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DistributorId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.DistributorId })
                </td>
            </tr>
        }

    </table>
