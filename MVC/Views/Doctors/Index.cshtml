@model IEnumerable<sdop.Models.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm())
    {
    <p>
        Dotor First Name: @Html.TextBox("Search Doctor") <br />
        Dotor Last Name: @Html.TextBox("Search Doctor") <br />

        <input type="submit" value="Filter" />
    </p>
}
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorPhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorYearsOfExperience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speciality)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorAge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorGender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorPhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorYearsOfExperience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Speciality)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DoctorSSN }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DoctorSSN }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.DoctorSSN })
                </td>
            </tr>
        }

    </table>
